<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootBottomsheetSW"
    android:padding="16dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutAddressBar1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:inputType="textUri"
                    android:hint="@string/search_or_type_url"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddressBar2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab2"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search2"
                    android:background="@drawable/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="@string/search_or_type_url"
                    android:imeOptions="actionSearch" 
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etLayoutTitleKB"
            android:layout_marginEnd="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Page Title"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTitleKB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginStart="4dp"
                android:id="@+id/btnSaveTitle"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F42B7B"
                android:textColor="@color/black"
                android:text="Save"/>

            <Switch
                android:paddingHorizontal="4dp"
                android:id="@+id/switchBtnConsole"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Console"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@drawable/switch_text_color"
                android:thumbTint="@drawable/switch_thumb_color"
                android:background="@drawable/bg_black_overlay_16rect"/>

        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btnPointerVisibilty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=" Visible "
            android:textOff="Invisible"
			android:checked="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pointer Visibility"
            android:fontFamily="monospace"
            android:textSize="9sp"
            android:textColor="#F42B7B"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
	
	<FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@drawable/black_lavender"
        android:layout_height="match_parent">
		
		<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <include
                layout="@layout/description_shortcut_sw_bottomsheet"/>

    </ScrollView>
		
	</FrameLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_marginHorizontal="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Speed"/>

            <include layout="@layout/speed_text"/>

        </LinearLayout>

        <ToggleButton
            android:id="@+id/btnPlayPauseWPM"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/toggle_play_pause"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="When enabled, captcha images and labels will be saved."
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

        <Switch
            android:layout_margin="4dp"
            android:paddingHorizontal="4dp"
            android:id="@+id/switchBtnScraping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Record Captcha"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@drawable/switch_text_color"
            android:thumbTint="@drawable/switch_thumb_color"
            android:background="@drawable/bg_black_overlay_16rect"/>

        <ImageButton
            android:id="@+id/btnSetInputMethodManager"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/ripple_icon"
            android:src="@drawable/rounded_keyboard_alt_24"
            app:tint="@color/accent_heading"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Set Inout method manager"/>

    </LinearLayout>
</LinearLayout>