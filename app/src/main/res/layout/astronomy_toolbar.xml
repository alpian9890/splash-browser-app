                        android:layout_marginBottom="7dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabs"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

